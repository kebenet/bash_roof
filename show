#!/bin/bash
#FILE! show messaging echo


#!/bin/bash

toansi() {
    hex_color="$1"
    r=$((16#$(echo $hex_color | cut -c2-3)))
    g=$((16#$(echo $hex_color | cut -c4-5)))
    b=$((16#$(echo $hex_color | cut -c6-7)))

    ansi_color=$(printf "\033[38;2;%d;%d;%dm" $r $g $b)
    echo -e "$r$g$b" 
    echo -e "$ansi_color" "terabo"
}

show_input(){
  read  -erp "${BOLD}${1}${ARROW} " -i "${2}" new
  echo "$new"
}


show_confirm() {

  read -p "Confirmation: (y/n) ‚ùØ" confirm
  if [ "$confirm" = "y" ]; then
    "$@"
  else
    echo "User canceled the Operations..."
  fi
}

show_msg2(){
  echo -e "${BMAGENTA}${1}${END} ${BOLD}${2}${END}"
}

export -f show_confirm
export -f show_msg2
export -f show_input
