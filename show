#!/bin/bash
#FILE! show messaging echo


clr2f(){  # color by 2 field
  field="$1"

  awk -F "$1" -v varcolor1="\\033[0;31m" -v varcolor2="\\033[0;32m" -v reset="\\033[0m" '{
    printf "%s%s%s ", varcolor1, $1, reset;
    printf "%s%s%s\n", varcolor2, $3, reset;
}'
}
show_input(){
  read  -erp "${BOLD}${1}${ARROW} " -i "${2}" new
  echo "$new"
}

_done_msg(){
  echoe "${BRED}'DONE'${END} save Operation at :"
  echoe "${ARROW} ${Tt_File_Types}"
}

_error_key(){
  echoe "${BRED}'Error:'${END} must provide ${BRED}KEY${END}"
  echoe "${ARROW} ${Tt_File_Types}"
}

show_confirm() {

  read -p "Confirmation: (y/n) ❯" confirm
  if [ "$confirm" = "y" ]; then
    "$@"
  else
    echo "User canceled the Operations..."
  fi
}

show_msg2(){
  echo -e "${BMAGENTA}${1}${END} ${BOLD}${2}${END}"
}

show_error(){
 #CODE! show msg as error output
  echo -e "${BMAGENTA}${1}${END} ${BOLD}${2}${END}" >&2
}

export -f show_confirm
export -f show_error
export -f show_msg2
export -f show_input
