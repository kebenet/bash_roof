#!/bin/bash
#FILE! show messaging echo


#!/bin/bash

toansi() {
    hex_color="$1"
    r=$((16#$(echo $hex_color | cut -c2-3)))
    g=$((16#$(echo $hex_color | cut -c4-5)))
    b=$((16#$(echo $hex_color | cut -c6-7)))

    ansi_color=$(printf "\033[38;2;%d;%d;%dm" $r $g $b)
    echo -e "$r$g$b" 
    echo -e "$ansi_color" "terabo"
}

show_input(){
  read  -erp "${BOLD}${1}${ARROW} " -i "${2}" new
  echo "$new"
}


confirm() {
  promp=`color 'confirm : (y/n): ‚ùØ '`
  read -p "$promp" confirm
  if [ "$confirm" = "y" ]; then
    return 0
  else
    color '   - Cancel : by : User'
    return 7
  fi
}

message(){
  all="$@"
  color "$all"
}

export -f confirm
export -f message
export -f show_input
