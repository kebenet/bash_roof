#!/bin/bash

fn_add(){

	item=$(_first_uncommit_file)
	read -rp "Desc $ARROW " desc
	[ -z "$desc" ] && echo 'empty description..' && exit 7

	shift
	git add "$@"
	git commit -m "$item - $desc"

}

fn_all(){

	item=$(_first_uncommit_file)
	
	read -rp "Desc $ARROW " desc
	[ -z "$desc" ] && echo 'empty description..' && exit 7

	git commit -a -m "$item - $desc"

}


fn_commit(){
	item=$(_first_uncommit_file)
	git commit -m "$item - $*"
}


fn_ls(){
	git diff --name-only
}

_first_uncommit_file(){
	git diff --name-only | sed -n '1p'
}

"fn_$1" "$@"