#!/bin/sh

mem_file='/dev/shm/TtMemory'

fn_init(){
	[ ! -d "$mem_file" ] && mkdir "$mem_file"
}

fn_set(){
	printf "$3" > "$mem_file/${2}.ttvar"
}

fn_get(){
	item="$mem_file/${2}.ttvar"
	[ -f "$item" ] && awk 'NR==1 {print}' "$item"
}

fn_get_file(){
	echo "$mem_file/${2}.ttvar"
}

fn_ls(){
	fd . -t f -d 2 --base-directory "$mem_file"
}


"fn_$1" "$@"
