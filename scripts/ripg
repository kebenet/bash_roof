#!/bin/bash
#FILE! ripgrep commands

# https://github.com/BurntSushi/ripgrep/blob/master/FAQ.md#colors


run_match(){

	run1(){
		rg "$1" -n --color=always --colors match:fg:green
	}
	run2(){
		run1 "$1" | 
		rg "$2" --color=always --colors match:fg:cyan
	}	
	run3(){
		run2 "$1" "$2" | 
		rg "$3" --color=always --colors match:fg:yellow
	}
	run4(){
		run3  "$1" "$2" "$3" | 
		rg "$4" --color=always --colors match:fg:green
	}

	"run$len" "$@"
}

len="$#"
[ $len -eq 0 ]&& exit 7


run_match "$@"
