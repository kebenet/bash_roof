#!/bin/bash

ANSI_ESC=$'\033'
ANSI_CSI="${ANSI_ESC}["
# ANSI_OSC="${ANSI_ESC}]"
# ANSI_ST="${ANSI_ESC}\\"

ansi::rgb() {
    printf '%s38;2;%s;%s;%sm' "$ANSI_CSI" "$1" "$2" "$3"
}

ansi::underline() {
    printf '%s4m' "$ANSI_CSI"
}

ansi::resetBackground() {
    printf '%s49m' "$ANSI_CSI"
}

ansi::resetColor() {
    printf '%s0m' "$ANSI_CSI"
}

ansi::resetFont() {
    printf '%s10m' "$ANSI_CSI"
}

ansi::resetForeground() {
    printf '%s39m' "$ANSI_CSI"
}

ansi::bell() {
    printf "%s" $'\007'
}

ansi::blink() {
    printf '%s5m' "$ANSI_CSI"
}


ansi::white() {
    printf '%s37m' "$ANSI_CSI"
}

ansi::white2() {
    printf '%s97m' "$ANSI_CSI"
}

ansi::yellow() {
    printf '%s33m' "$ANSI_CSI"
}

