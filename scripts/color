#!/bin/sh

clr(){

    awk -v var="$1" \
    'BEGIN {
        FS = (var == "" ? ":" : var);
        colors[1] = "\033[38;2;163;177;198m";
        colors[8] = "\033[38;2;180;142;173m";
        colors[7] = "\033[38;2;143;188;187m";
        colors[6] = "\033[38;2;136;192;208m";
        colors[5] = "\033[38;2;129;161;193m";
        colors[3] = "\033[38;2;94;129;172m";
        colors[4] = "\033[38;2;191;97;106m";
        colors[2] = "\033[38;2;208;135;112m";
        }
        {
            for(i=1;i<=NF;i++){
                # $i=$i;
                printf "%s%s%s", colors[(i-1)%8+1], $i, "\033[0m";
            }
            printf "\n"
        }'
}


#CODE! pipe is coming bro..
if [ -t 0 ]; then
 
    if [ ${#1} -eq 1 ]; then
        sep="$1"
        shift
    fi
    echo "$@" | clr "$sep"

else
    clr "$@"
    # echo 'pipe true'
fi

