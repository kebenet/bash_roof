#!/bin/bash

# ANSI_OSC="${ANSI_ESC}]"
# ANSI_ST="${ANSI_ESC}\\"
ANSI_ESC=$'\033'
ANSI_CSI="${ANSI_ESC}["

RESETBG="${ANSI_CSI}49m"
RESETCOLOR="${ANSI_CSI}0m"
RESETFG="${ANSI_CSI}39m"

WHITE="${ANSI_CSI}37m"
WHITE2="${ANSI_CSI}97m"
YELLOW="${ANSI_CSI}33m"
YELLOW2="${ANSI_CSI}93m"
BLACK="${ANSI_CSI}30m"
BLACK2="${ANSI_CSI}90m"
BLUE="${ANSI_CSI}34m"
BLUE2="${ANSI_CSI}94m"
CYAN="${ANSI_CSI}36m"
CYAN2="${ANSI_CSI}96m"
MAGENTA="${ANSI_CSI}35m"
MAGENTA2="${ANSI_CSI}95m"
RED="${ANSI_CSI}31m"
RED2="${ANSI_CSI}91m"
GREEN="${ANSI_CSI}32m"
GREEN2="${ANSI_CSI}92m"
BGBLACK="${ANSI_CSI}40m"
BGBLACK2="${ANSI_CSI}100m"
BGBLUE="${ANSI_CSI}44m"
BGBLUE2="${ANSI_CSI}104m"
BGCYAN="${ANSI_CSI}46m"
BGCYAN2="${ANSI_CSI}106m"
BGGREEN="${ANSI_CSI}42m"
BGGREEN2="${ANSI_CSI}102m"
BGMAGENTA="${ANSI_CSI}45m"
BGMAGENTA2="${ANSI_CSI}105m"
BGRED="${ANSI_CSI}41m"
BGRED2="${ANSI_CSI}101m"
BGWHITE="${ANSI_CSI}47m"
BGWHITE2="${ANSI_CSI}107m"
BGYELLOW="${ANSI_CSI}43m"
BGYELLOW2="${ANSI_CSI}103m"
BOLD="${ANSI_CSI}1m"
FRAKTUR="${ANSI_CSI}20m"
FRAME="${ANSI_CSI}51m"
FAINT="${ANSI_CSI}2m"
UNDERLINE="${ANSI_CSI}4m"
BLINK="${ANSI_CSI}5m"
BELL=$'\007'


ansi::rgb() {
    printf '%s38;2;%s;%s;%sm' "$ANSI_CSI" "$1" "$2" "$3"
}

ansi::bgRgb() {
    printf '%s48;2;%s;%s;%sm' "$ANSI_CSI" "$1" "$2" "$3"
}

ansi::bgColor() {
    printf '%s48;5;%sm' "$ANSI_CSI" "$1"
}

ansi::color() {
    printf '%s38;5;%sm' "$ANSI_CSI" "$1"
}


# ============================ Color


# Function to print text in specified color using ANSI escape codes
clr() {
    local color
    local text
    # local result=""

    while [ $# -gt 0 ]; do
        case "$1" in
        --bell)         color="$BELL"; shift; text="$1"; ;;
        --bgblack2)     color="$BGBLACK2"; shift; text="$1"; ;;
        --bgblack)      color="$BGBLACK"; shift; text="$1"; ;;
        --bgblue2)      color="$BGBLUE2"; shift; text="$1"; ;;
        --bgblue)       color="$BGBLUE"; shift; text="$1"; ;;
        --bgcolor)      color="$BGCOLOR"; shift; text="$1"; ;;
        --bgcyan2)      color="$BGCYAN2"; shift; text="$1"; ;;
        --bgcyan)       color="$BGCYAN"; shift; text="$1"; ;;
        --bggreen2)     color="$BGGREEN2"; shift; text="$1"; ;;
        --bggreen)      color="$BGGREEN"; shift; text="$1"; ;;
        --bgmagenta2)   color="$BGMAGENTA2"; shift; text="$1"; ;;
        --bgmagenta)    color="$BGMAGENTA"; shift; text="$1"; ;;
        --bgred2)       color="$BGRED2"; shift; text="$1"; ;;
        --bgred)        color="$BGRED"; shift; text="$1"; ;;
        --bgrgb)        color="$BGRGB"; shift; text="$1"; ;;
        --bgwhite2)     color="$BGWHITE2"; shift; text="$1"; ;;
        --bgwhite)      color="$BGWHITE"; shift; text="$1"; ;;
        --bgyellow2)    color="$BGYELLOW2"; shift; text="$1"; ;;
        --bgyellow)     color="$BGYELLOW"; shift; text="$1"; ;;
        --black2)       color="$BLACK2"; shift; text="$1"; ;;
        --black)        color="$BLACK"; shift; text="$1"; ;;
        --blink)        color="$BLINK"; shift; text="$1"; ;;
        --blue2)        color="$BLUE2"; shift; text="$1"; ;;
        --blue)         color="$BLUE"; shift; text="$1"; ;;
        --bold)         color="$BOLD"; shift; text="$1"; ;;
        --color)        color="$COLOR"; shift; text="$1"; ;;
        --cyan2)        color="$CYAN2"; shift; text="$1"; ;;
        --cyan)         color="$CYAN"; shift; text="$1"; ;;
        --faint)        color="$FAINT"; shift; text="$1"; ;;
        --fraktur)      color="$FRAKTUR"; shift; text="$1"; ;;
        --frame)        color="$FRAME"; shift; text="$1"; ;;
        --green2)       color="$GREEN2"; shift; text="$1"; ;;
        --green)        color="$GREEN"; shift; text="$1"; ;;
        --magenta2)     color="$MAGENTA2"; shift; text="$1"; ;;
        --magenta)      color="$MAGENTA"; shift; text="$1"; ;;
        --red2)         color="$RED2"; shift; text="$1"; ;;
        --red)          color="$RED"; shift; text="$1"; ;;
        --resetbg)      color="$RESETBG"; shift; text="$1"; ;;
        --resetcolor)   color="$RESETCOLOR"; shift; text="$1"; ;;
        --resetfg)      color="$RESETFG"; shift; text="$1"; ;;
        --rgb)          color="$RGB"; shift; text="$1"; ;;
        --underline)    color="$UNDERLINE"; shift; text="$1"; ;;
        --white2)       color="$WHITE2"; shift; text="$1"; ;;
        --white)        color="$WHITE"; shift; text="$1"; ;;
        --yellow2)      color="$YELLOW2"; shift; text="$1"; ;;
        --yellow)       color="$YELLOW"; shift; text="$1"; ;;
            *) shift ;;
        esac

        if [ -n "$color" ]; then
            # result+="$(echo -e "${color}${text}\033[0m")\n"
            echo -e "${color}${text}\033[0m"
        fi
        color=""
        shift
    done

    # echo -e "$result"
}

clr "$@"

# Example usage
# clr --black 'this white text' --green 'my text is green' --bold 'Im the bold'
# clr --black2 'this white text' --yellow2 'my text is green' --red2 'Im the bold'
# clr --faint 'this faint' --bgwhite 'frame text' --fraktur 'Im the bold'
# clr --red 'this faint' --bgwhite 'frame text' --fraktur 'Im the bold'
# clr --black 'this white text' --green 'my text is green' --bold 'Im the bold'
# clr --black2 'this white text' --yellow2 'my text is green' --red2 'Im the bold'
# clr --faint 'this faint' --bgwhite 'frame text' --fraktur 'Im the bold'
# clr --red 'this faint' --bgwhite 'frame text' --fraktur 'Im the bold'

